@import url('https://fonts.cdnfonts.com/css/novoposelensky');

body{
	background-color: #151515;
	right: 20px;
	margin: 0px;
}

main {
	padding: 30px;
	padding-left: 60px;
	padding-right: 60px;
}

footer {
	flex: 0 0 auto;
}


.photo{
	display: flex;
	justify-content: flex-end;
}

.fl-me {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
}

.fl-megroup {
	display: flex;
	flex-direction: column;
}

.fl-item-me{
	font-size: 18px;
	font-family: "Montserrat", sans-serif;
	font-weight: 300;
	color: white;
	padding: 25px;
}

.wr11{
	display: flex;
	justify-content: center;
}

.wr1 {
	margin-top: 35px;
	display: grid;
	grid-template-columns: 576px 576px;
	grid-template-rows: 326px 326px;
	gap: 20px;
}

.flex-container {
	display: flex;
	justify-content: space-around;
}

.flex-icons{
	display: inline-block;
	text-align: left;
	vertical-align: middle;
	padding: 4px;
}

.flex-item-header{
	display: flex;
	font-size: 16px;
	font-family: "Montserrat", sans-serif;
	font-weight: 300;
	color: white;
	padding: 25px;
}
	
.flex-item-footer{
	font-size: 18px;
	font-family: "Montserrat", sans-serif;
	font-weight: 300;
	color: white;
	padding: 25px;
}

h1 {
	margin-top: 20px;
	color:  #62BEC2;
	font-family: "Novoposelensky";
	font-size: 40px;
}

.h2 {
	color: #D8CAF9;
	font-family: "Montserrat", sans-serif;
	font-size: 28px;
	font-weight: 600;
	margin-bottom: 15px;
	margin-top: 5px;
}

.h3 {
	margin-bottom: 15px;
	color: white;
	font-family: "Montserrat", sans-serif;
	font-size: 24px;
	font-weight: 600;
}

.fon {
	background-image:url('circles2.png');
	background-repeat: no-repeat;
	background-position: center;
	background-size: 30% auto;
}

p{
	color: white;
	font-family: "Montserrat", sans-serif;
	font-size: 24px;
	font-weight: 300;
	line-height: 0.8;
	margin-bottom: 15px;
	margin-top: 5px;
}

.p1{
	color: white;
	font-family: "Montserrat", sans-serif;
	font-size: 18px;
	font-weight: 300;
	padding: 40px;
}

li {
	color: white;
}

ul {
	margin-bottom: 10px;
	margin-top: 10px;
}

a {
	color: white;
}

button {
	background-color: #749DD3;
	border-radius: 20px;
	color: white;
	padding: 24px 28px;
	text-decoration: none;
	font-family: "Montserrat";
	font-weight: 300;
	font-size: 20px; 
	margin-bottom: 40px;
	cursor: pointer;
}

button[name="run_script"]:hover {
	background-color: #7D67AD;
}

.cont-ya {
	display: flex;
	align-items: center;
    justify-content: space-between;
}


.str{
	padding: 0px;
	border: none;
	border-bottom: 5px solid #749DD3;
	margin-bottom: 40px;
}

.working{
	display: flex;
	flex-direction: column;
	flex-wrap: wrap;
	align-content: center;
}

.workinggroup {
	display: flex;
	flex-direction: column;
    flex-wrap: wrap;
    align-items: flex-start;
}

#myBtn {
    display: none;
    position: fixed; 
    bottom: 5px; 
    right: 10px;  
    border: none; 
    outline: none; 
    background-color: #3A3A3A;
    color: white; 
    cursor: pointer; 
    padding: 10px; 
    border-radius: 15px;
    font-size: 18px;
}

#myBtn:hover {
    background-color: #323232;
}

.dialog{
	color: black;
	font-family: "Montserrat", sans-serif;
	font-size: 16px;
	font-weight: 300;
	line-height: 0.8;
	display: flex;
	justify-content: center;
}
